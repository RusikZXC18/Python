text = """Привіт, це перший приклад тексту.
Тут ми маємо кілька речень з різною довжиною слів.
Деякі слова короткі, а деякі — досить довгі!"""

try:
    # Записуємо вміст у файл TF4_1
    with open('TF4_1.txt', 'w', encoding='utf-8') as file:
        file.write(text)
except IOError as e:
    print(f"Помилка при відкритті або записі у файл: {e}")

#Частина б:
import string

# Функція для підрахунку слів за їхньою довжиною
def count_words_by_length(file_name):
    word_length_counts = {}

    try:
        # Читання файлу TF4_1
        with open(file_name, 'r', encoding='utf-8') as file:
            content = file.read()
    except FileNotFoundError:
        print(f"Файл {file_name} не знайдено.")
        return word_length_counts
    except IOError as e:
        print(f"Помилка читання файлу: {e}")
        return word_length_counts

    # Видалення розділових знаків
    translator = str.maketrans('', '', string.punctuation)
    content = content.translate(translator)

    # Розділення на слова та підрахунок довжини кожного слова
    words = content.split()
    for word in words:
        length = len(word)
        if length <= 16:  # Ігноруємо слова більше 16 символів
            if length not in word_length_counts:
                word_length_counts[length] = 0
            word_length_counts[length] += 1

    return word_length_counts

# Отримання кількості слів за довжиною
word_length_counts = count_words_by_length('TF4_1.txt')

try:
    # Запис результатів у файл TF4_2
    with open('TF4_2.txt', 'w', encoding='utf-8') as file:
        for length, count in sorted(word_length_counts.items()):
            file.write(f'Слово з {length} символів: {count}\n')
except IOError as e:
    print(f"Помилка при відкритті або записі у файл: {e}")

#Частина в:
try:
    # Читання вмісту файла TF4_2
    with open('TF4_2.txt', 'r', encoding='utf-8') as file:
        content = file.readlines()

    # Виведення кожного рядка на екран
    for line in content:
        print(line.strip())
except FileNotFoundError:
    print("Файл TF4_2.txt не знайдено.")
except IOError as e:
    print(f"Помилка читання файлу: {e}")


